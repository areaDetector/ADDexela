# Corrections records
######################
record(waveform, "$(P)$(R)DEXCorrectionsDir")
{
    field(PINI, "YES")
    field(DTYP, "asynOctetWrite")
    field(INP,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))DEX_CORRECTIONS_DIRECTORY")
    field(FTVL, "CHAR")
    field(NELM, "256")
}


